{%- assign filteredItems = "" | split: "," -%}

{%- for curricula in site.data.wai-curricula -%}
    {{ curricula.name }}
    {%- for modules in curricula.modules -%}
        {%- if include.data contains modules.id -%}
            {{ modules.name }}
            {%- assign aux = "" | split: "," -%}
            {%- assign aux = aux | push: curricula.name -%}
            {%- assign aux = aux | push: modules.name -%}
            {%- assign filteredItems  = filteredItems | push: aux -%}
        {%- endif -%}
    {%- endfor -%}
{%- endfor -%}
