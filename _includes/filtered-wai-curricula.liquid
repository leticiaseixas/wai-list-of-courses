{%- assign filteredItems = "" | split: "," -%}
{%- assign modules = site.data.wai-curricula | map: "modules" -%}


{%- for module in modules -%}
    {%- for subModule in module -%}
        {% if include.data contains subModule.id %}
            {% assign aux = "" | split: "," %}
            {% assign aux = aux | push: module.name %}
            {% assign aux = aux | push: subModule.name %}
            {% assign aux = aux | push: subModule.link %}
            {% assign filteredItems  = filteredItems | push: aux %}
        {% endif %}
    {%- endfor -%}
{%- endfor -%}

